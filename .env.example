# Environment - Options: development, production
DJANGO_ENVIRONMENT=development

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Options:
# django.core.mail.backends.console.EmailBackend (output to console)
# django.core.mail.backends.filebased.EmailBackend (save to files)
# django.core.mail.backends.smtp.EmailBackend (send via SMTP)

# Only needed if using SMTP backend:
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=user@example.com
EMAIL_HOST_PASSWORD=password
DEFAULT_FROM_EMAIL=Newsletter <newsletter@example.com>

# Only needed if using file backend:
# EMAIL_FILE_PATH=./sent_emails

# Database Configuration
# SQLite Configuration:
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# PostgreSQL Configuration:
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=dbname
# DATABASE_USER=dbuser
# DATABASE_PASSWORD=dbpassword
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Django Secret Key - Generate a secure key!
SECRET_KEY='generate-a-secure-key-here'

# Debug settings
DEBUG=True

# Allowed Hosts - comma separated list of hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Additional Production Settings (uncomment in production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True