# Environment
DJANGO_ENVIRONMENT=production

# Email Configuration - Real SMTP for production
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.home.pl
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_actual_email@yourdomain.com
EMAIL_HOST_PASSWORD=your_actual_password
DEFAULT_FROM_EMAIL=Newsletter <newsletter@yourdomain.com>

# Database Configuration - PostgreSQL for production
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=your_production_db_name
DATABASE_USER=your_production_db_user
DATABASE_PASSWORD=your_production_db_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Django Secret Key - Generate a new secure key for production!
SECRET_KEY='generate-a-unique-secure-key-here-for-production'

# Debug settings - Always False in production
DEBUG=False

# Allowed Hosts - Your actual domain(s)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Additional Production Settings
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
